WITH RECURSIVE STAND AS (
        SELECT 0 AS HOUR, 0 AS COUNT
        UNION ALL
        SELECT HOUR+1, 0 FROM STAND 
        WHERE HOUR < 23
    )

SELECT s.HOUR, IFNULL(a.COUNT, 0) AS COUNT
    FROM STAND AS s
    LEFT JOIN (
        SELECT DATE_FORMAT(DATETIME,"%H") AS HOUR, count(*) AS COUNT
            FROM ANIMAL_OUTS
            GROUP BY DATE_FORMAT(DATETIME,"%H")
            ORDER BY DATE_FORMAT(DATETIME,"%H")
        ) a
    ON s.HOUR = a.HOUR